<%- include('partials/header') %>

 <div class="product-page-container">
 <div class="profile-header">
 <div class="user-avatar">
 <% if (user.avatar_path) { %>
 <img src="<%= user.avatar_path %>" alt="<%= user.full_name %>" class="profile-avatar-image">
 <% } else { %>
 <%= ((user.full_name || 'U' ).charAt(0).toUpperCase()) %>
 <% } %>
 </div>
 <div class="user-details">
 <h2>
 <%= user.full_name %>
 </h2>
 <p>
 <%= user.email %>
 </p>
 <span class="role-badge" style="display:inline-flex;align-items:center;gap:6px;">
 <i class="<%= user.rank_meta ? user.rank_meta.icon : 'ri-user-star-line' %>"></i>
 <%= user.rank_meta ? user.rank_meta.label : 'Üzv' %>
 </span>
 </div>
 <div class="profile-actions">
 <% if (user.role==='admin' ) { %>
 <a href="/admin" class="btn btn-primary"><i class="ri-settings-3-line"></i> Admin Panel</a>
 <% } else if (user.role==='reseller' ) { %>
 <a href="/reseller" class="btn btn-primary"><i class="ri-store-3-line"></i> Bayi Paneli</a>
 <% } %>
 <a href="/logout" class="btn btn-outline"><i class="ri-logout-box-r-line"></i> Çıxış</a>
 </div>
 </div>

 <div class="profile-section-card mb-4">
 <div class="card-header-premium">
 <i class="ri-user-settings-line"></i>
 <h3>İctimai Profil Ayarları</h3>
 </div>
 <form action="/profile/public/update" method="POST" enctype="multipart/form-data" class="p-4">
 <div class="row">
 <div class="col-md-4">
 <label class="small font-weight-bold text-uppercase pb-1" style="color:#64748b;letter-spacing:.5px;">Profil şəkli</label>
 <input type="file" name="avatar" class="form-control-premium" accept="image/*">
 </div>
 <div class="col-md-4">
 <label class="small font-weight-bold text-uppercase pb-1" style="color:#64748b;letter-spacing:.5px;">Rank</label>
 <select name="rank_key" class="form-control-premium">
 <% (rankOptions || []).forEach(function(rank){ %>
 <option value="<%= rank.key %>" <%= String(user.rank_key || 'member') === rank.key ? 'selected' : '' %>><%= rank.label %></option>
 <% }) %>
 </select>
 </div>
 <div class="col-md-4 d-flex align-items-end">
 <div class="custom-control custom-switch mb-2">
 <input type="checkbox" class="custom-control-input" name="public_profile_enabled" id="public_profile_enabled" <%= Number(user.public_profile_enabled || 1) === 1 ? 'checked' : '' %>>
 <label class="custom-control-label font-weight-bold" for="public_profile_enabled">Profilim hamıya açıq olsun</label>
 </div>
 </div>
 </div>
 <div class="mt-3">
 <label class="small font-weight-bold text-uppercase pb-1" style="color:#64748b;letter-spacing:.5px;">Qısa bio</label>
 <textarea name="public_bio" class="form-control-premium" rows="3" placeholder="Özünüz haqqında qısa məlumat"><%= user.public_bio || '' %></textarea>
 </div>
 <div class="mt-3 d-flex flex-wrap" style="gap:10px;">
 <button type="submit" class="btn btn-primary">Profili yenilə</button>
 <a href="/u/<%= user.id %>" target="_blank" class="btn btn-outline">Public profilə bax</a>
 <a href="/people" class="btn btn-outline">İcma profilləri</a>
 </div>
 </form>
 </div>

 <div class="profile-section-card mb-4">
 <div class="card-header-premium">
 <i class="ri-gift-line"></i>
 <h3>5 nəfər dəvət et, <%= referral.reward %> qazan</h3>
 </div>
 <div class="p-4">
 <div class="referral-progress-meta">
 <strong><%= referral.referredCount %> / <%= referral.target %></strong>
 <span>Təsdiqlənmiş qeydiyyat</span>
 </div>
 <div class="referral-progress-track mt-2">
 <div class="referral-progress-fill" style="width: <%= referral.progressPercent %>%"></div>
 </div>
 <div class="mt-3">
 <label class="small font-weight-bold text-uppercase" style="letter-spacing: .5px; color: #64748b;">Dəvət linkin</label>
 <div class="referral-link-row">
 <input type="text" id="referralLinkInput" class="form-control-premium" value="<%= referral.inviteLink %>" readonly>
 <button type="button" class="btn btn-outline" id="copyReferralBtn">Kopyala</button>
 </div>
 </div>
 <div class="mt-3 d-flex flex-wrap align-items-center" style="gap: 10px;">
 <form action="/profile/referral/claim" method="POST" class="mb-0">
 <button type="submit" class="btn btn-primary" <%= referral.canClaim ? '' : 'disabled' %>>Ödül tələbi yarat</button>
 </form>
 <% if (referral.pendingClaim) { %>
 <span class="status-badge-premium pending">Tələb göndərilib, admin baxışındadır</span>
 <% } else if (!referral.canClaim) { %>
 <span class="text-muted small">Ödül üçün <%= referral.target %> nəfər tamamlanmalıdır.</span>
 <% } %>
 </div>
 <p class="text-muted small mb-0 mt-2">Qeyd: Bonus sayımı üçün hər dəvət fərqli IP üzərindən qeydiyyatdan keçməlidir.</p>
 </div>
 </div>

 <div class="profile-section-card mb-4">
 <div class="card-header-premium">
 <i class="ri-shield-star-line"></i>
 <h3>Təhlükəsizlik Ayarları (2FA)</h3>
 </div>
 <form action="/profile/update-2fa" method="POST" class="p-4">
 <div class="row align-items-center">
 <div class="col-md-5">
 <div class="form-group mb-0">
 <label class="small font-weight-bold text-uppercase pb-1"
 style="color: #64748b; letter-spacing: 0.5px;">Telefon Nömrəsi</label>
 <div class="input-group-premium">
 <i class="ri-phone-line"></i>
 <input type="text" name="phone" class="form-control-premium"
 value="<%= user.phone || '' %>" placeholder="994XXXXXXXXX">
 </div>
 </div>
 </div>
 <div class="col-md-4">
 <div class="custom-control custom-switch mt-md-4">
 <input type="checkbox" class="custom-control-input" name="two_factor_enabled"
 id="2fa_toggle" <%=user.two_factor_enabled ? 'checked' : '' %>>
 <label class="custom-control-label font-weight-bold" for="2fa_toggle"
 style="cursor: pointer;">2FA Aktiv et</label>
 </div>
 </div>
 <div class="col-md-3 text-md-right mt-3 mt-md-4">
 <button type="submit" class="btn btn-primary btn-block"
 style="height: 45px; border-radius: 10px;">Yadda saxla</button>
 </div>
 </div>
 <div class="mt-4 p-3 rounded-lg" style="background: #f8fafc; border: 1px dashed #e2e8f0;">
 <p class="text-muted small mb-0">
 <i class="ri-information-line text-primary mr-1"></i> 2FA aktiv edildikdə, hər girişdə
 HubMSG vasitəsilə telefonunuza doğrulama kodu göndəriləcək. Bu, hesabınızın təhlükəsizliyini
 maksimum səviyyədə təmin edir.
 </p>
 </div>
 </form>
 </div>

 <div class="profile-section-card mb-4">
 <div class="card-header-premium">
 <i class="ri-wallet-3-line"></i>
 <h3>Balans Artırma Tarixçəsi</h3>
 </div>
 <div class="p-0">
 <% if (topups && topups.length > 0) { %>
 <div class="table-responsive">
 <table class="table table-hover-premium mb-0">
 <thead>
 <tr>
 <th>ID</th>
 <th>Məbləğ</th>
 <th>Ad Soyad</th>
 <th>Tarix</th>
 <th>Status</th>
 <th>İade</th>
 </tr>
 </thead>
 <tbody>
 <% topups.forEach(topup => { %>
 <tr>
 <td class="font-weight-bold text-muted">#<%= topup.id %></td>
 <td class="font-weight-bold text-dark"><%= Number(topup.amount).toFixed(2) %> AZN</td>
 <td><%= topup.sender_name %></td>
 <td class="text-muted small"><%= new Date(topup.created_at).toLocaleDateString() %></td>
 <td>
 <span class="status-badge-premium <%= (topup.refund_status === 'pending') ? 'pending' : (topup.status === 'approved' ? 'completed' : (topup.status === 'pending' ? 'pending' : 'cancelled')) %>">
 <i class="<%= (topup.refund_status === 'pending') ? 'ri-refresh-line' : (topup.status === 'approved' ? 'ri-checkbox-circle-line' : (topup.status === 'pending' ? 'ri-time-line' : 'ri-close-circle-line')) %> mr-1"></i>
 <%= (topup.refund_status === 'pending') ? 'İadeniz işleme alınmıştır' : (topup.status === 'approved' ? 'Təsdiqləndi' : (topup.status === 'pending' ? 'Gözləyir' : 'Rədd edildi')) %>
 </span>
 </td>
 <td>
 <% if (topup.can_refund) { %>
 <form action="/profile/topups/<%= topup.id %>/refund-request" method="POST" class="mb-0">
 <button type="submit" class="btn btn-outline btn-sm">İade talebi</button>
 </form>
 <% } else if (topup.refund_status === 'pending') { %>
 <span class="text-muted small">İşləmdə</span>
 <% } else { %>
 <span class="text-muted small">-</span>
 <% } %>
 </td>
 </tr>
 <% }) %>
 </tbody>
 </table>
 </div>
 <% } else { %>
 <div class="text-center py-5">
 <i class="ri-wallet-3-line icon-3x mb-3 text-light"></i>
 <p class="text-muted">Hələ balans artırma tələbiniz yoxdur.</p>
 </div>
 <% } %>
 </div>
 </div>

 <div class="profile-section-card">
 <div class="card-header-premium">
 <i class="ri-history-line"></i>
 <h3>Sifariş Tarixçəsi</h3>
 </div>

 <div class="p-0">
 <% if (orders.length> 0) { %>
 <div class="table-responsive">
 <table class="table table-hover-premium mb-0">
 <thead>
 <tr>
 <th>ID</th>
 <th>Məhsul</th>
 <th>Tarix</th>
 <th>Məbləğ</th>
 <th>Status</th>
 </tr>
 </thead>
 <tbody>
 <% orders.forEach(order=> { %>
 <tr>
 <td class="font-weight-bold text-muted">#<%= order.id %>
 </td>
 <td>
 <div class="d-flex align-items-center">
 <div class="order-prod-icon mr-3">
 <i class="ri-archive-line"></i>
 </div>
 <span class="font-weight-600">
 <%= order.product_name %>
 </span>
 </div>
 </td>
 <td class="text-muted small">
 <%= new Date(order.created_at).toLocaleDateString() %>
 </td>
 <td class="font-weight-bold text-dark">
 <%= Number(order.amount).toFixed(2) %> AZN
 </td>
 <td>
 <span class="status-badge-premium <%= order.status %>">
 <i
 class="<%= order.status === 'completed' ? 'ri-checkbox-circle-line' : (order.status === 'pending' ? 'ri-time-line' : 'ri-close-circle-line') %> mr-1"></i>
 <%= order.status==='pending' ? 'Gözləyir' : (order.status==='completed'
 ? 'Tamamlandı' : 'Ləğv edildi' ) %>
 </span>
 </td>
 </tr>
 <% }) %>
 </tbody>
 </table>
 </div>
 <% } else { %>
 <div class="text-center py-5">
 <i class="ri-receipt-line icon-3x mb-3 text-light"></i>
 <p class="text-muted">Hələ heç bir sifarişiniz yoxdur.</p>
 </div>
 <% } %>
 </div>
 </div>
 </div>

 <style>
 .profile-section-card {
 background: #fff;
 border-radius: 16px;
 box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05), 0 2px 4px -1px rgba(0, 0, 0, 0.03);
 border: 1px solid #e2e8f0;
 overflow: hidden;
 }

 .card-header-premium {
 padding: 20px 25px;
 background: #f8fafc;
 border-bottom: 1px solid #e2e8f0;
 display: flex;
 align-items: center;
 gap: 12px;
 }

 .card-header-premium i {
 font-size: 20px;
 color: var(--primary-color);
 }

 .card-header-premium h3 {
 margin: 0;
 font-size: 18px;
 font-weight: 700;
 color: #1e293b;
 }

 .profile-header {
 display: flex;
 align-items: center;
 gap: 30px;
 margin-bottom: 30px;
 background: linear-gradient(135deg, var(--white) 0%, #f8fafc 100%);
 padding: 40px;
 border-radius: 20px;
 box-shadow: var(--shadow-soft);
 border: 1px solid #e2e8f0;
 }

 .user-avatar {
 width: 100px;
 height: 100px;
 background: var(--primary-color);
 color: white;
 border-radius: 50%;
 display: flex;
 align-items: center;
 justify-content: center;
 font-size: 42px;
 font-weight: 800;
 box-shadow: 0 10px 15px -3px rgba(190, 18, 60, 0.2);
 border: 4px solid var(--white);
 }

 .profile-avatar-image {
 width: 100%;
 height: 100%;
 object-fit: cover;
 border-radius: 50%;
 }

 .role-badge {
 background: rgba(190, 18, 60, 0.1);
 color: var(--primary-color);
 padding: 4px 14px;
 border-radius: 20px;
 font-size: 11px;
 font-weight: 800;
 text-transform: uppercase;
 letter-spacing: 0.5px;
 display: inline-flex;
 align-items: center;
 gap: 6px;
 margin-top: 10px;
 }

 .form-control-premium {
 border: 1px solid #e2e8f0;
 border-radius: 10px;
 padding: 10px 15px 10px 40px;
 width: 100%;
 height: 45px;
 font-weight: 600;
 color: #334155;
 transition: all 0.2s;
 background: #f8fafc;
 }

 textarea.form-control-premium {
 height: auto;
 padding: 12px 14px;
 }

 .form-control-premium:focus {
 outline: none;
 border-color: var(--primary-color);
 background: white;
 box-shadow: 0 0 0 4px rgba(190, 18, 60, 0.05);
 }

 .input-group-premium {
 position: relative;
 }

 .input-group-premium i {
 position: absolute;
 left: 15px;
 top: 50%;
 transform: translateY(-50%);
 color: #94a3b8;
 }

 .referral-progress-meta {
 display: flex;
 align-items: center;
 justify-content: space-between;
 gap: 12px;
 color: #334155;
 }

 .referral-progress-track {
 width: 100%;
 height: 10px;
 background: #e2e8f0;
 border-radius: 999px;
 overflow: hidden;
 }

 .referral-progress-fill {
 height: 100%;
 background: linear-gradient(90deg, #0f766e 0%, #14b8a6 100%);
 border-radius: 999px;
 transition: width .25s ease;
 }

 .referral-link-row {
 display: flex;
 align-items: center;
 gap: 8px;
 }

 .referral-link-row .form-control-premium {
 padding-left: 14px;
 }

 /* Table styles */
 .table-hover-premium thead th {
 background: #fff;
 border-top: none;
 border-bottom: 2px solid #f1f5f9;
 color: #64748b;
 font-size: 12px;
 text-transform: uppercase;
 letter-spacing: 0.5px;
 padding: 20px 25px;
 }

 .table-hover-premium tbody td {
 padding: 20px 25px;
 vertical-align: middle;
 border-bottom: 1px solid #f1f5f9;
 }

 .order-prod-icon {
 width: 36px;
 height: 36px;
 background: #f1f5f9;
 border-radius: 10px;
 display: flex;
 align-items: center;
 justify-content: center;
 color: #64748b;
 }

 .status-badge-premium {
 padding: 6px 14px;
 border-radius: 40px;
 font-size: 12px;
 font-weight: 700;
 display: inline-flex;
 align-items: center;
 }

 .status-badge-premium.pending {
 background: #fff7ed;
 color: #c2410c;
 }

 .status-badge-premium.completed {
 background: #f0fdf4;
 color: #15803d;
 }

 .status-badge-premium.cancelled {
 background: #fef2f2;
 color: #b91c1c;
 }

 .font-weight-600 {
 font-weight: 600;
 }

 @media (max-width: 768px) {
 .profile-header {
 flex-direction: column;
 text-align: center;
 padding: 30px;
 }

 .profile-actions {
 margin-left: 0;
 margin-top: 20px;
 width: 100%;
 justify-content: center;
 }

 .referral-link-row {
 flex-direction: column;
 align-items: stretch;
 }
 }
 </style>

 <script>
 (function () {
 const copyBtn = document.getElementById('copyReferralBtn');
 const linkInput = document.getElementById('referralLinkInput');
 if (!copyBtn || !linkInput) return;

 copyBtn.addEventListener('click', async function () {
 try {
 await navigator.clipboard.writeText(linkInput.value);
 const original = copyBtn.textContent;
 copyBtn.textContent = 'Kopyalandı';
 setTimeout(() => {
 copyBtn.textContent = original;
 }, 1200);
 } catch (e) {
 linkInput.select();
 document.execCommand('copy');
 }
 });
 })();
 </script>

 <%- include('partials/footer') %>
