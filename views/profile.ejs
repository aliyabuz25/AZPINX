 <%
 const ownedMap = {};
 (orders || []).forEach(function(o){
 const key = String(o.product_name || '').trim();
 if (!key) return;
 const status = String(o.status || '').toLowerCase();
 if (!ownedMap[key]) {
 ownedMap[key] = { product_name: key, total_spent: 0, last_order_at: o.created_at, completed_count: 0, has_completed: false };
 }
 ownedMap[key].total_spent += Number(o.amount || 0);
 if (new Date(o.created_at).getTime() > new Date(ownedMap[key].last_order_at).getTime()) {
 ownedMap[key].last_order_at = o.created_at;
 }
 if (status === 'completed') {
 ownedMap[key].completed_count += 1;
 ownedMap[key].has_completed = true;
 }
 });
 const ownedProducts = Object.values(ownedMap).sort(function(a, b){
 return new Date(b.last_order_at).getTime() - new Date(a.last_order_at).getTime();
 });
 %>

 <div class="profile-section-card mb-4">
 <div class="card-header-premium">
 <i class="ri-movie-2-line"></i>
 <h3>Nələrə Sahibəm</h3>
 </div>
 <div class="p-4">
 <% if (ownedProducts.length > 0) { %>
 <div class="owned-grid">
 <% ownedProducts.forEach(function(item){ %>
 <div class="owned-card">
 <div class="owned-poster">
 <i class="ri-vip-diamond-line"></i>
 </div>
 <div class="owned-info">
 <h4><%= item.product_name %></h4>
 <div class="owned-meta">
 <span class="owned-chip <%= item.has_completed ? 'ok' : 'pending' %>">
 <i class="<%= item.has_completed ? 'ri-checkbox-circle-line' : 'ri-time-line' %>"></i>
 <%= item.has_completed ? (item.completed_count + ' dəfə alınıb') : 'Gözləyən sifariş' %>
 </span>
 </div>
 <div class="owned-sub">
 <span>Top xərcləmə: <strong><%= Number(item.total_spent).toFixed(2) %> AZN</strong></span>
 <span>Son alış: <strong><%= new Date(item.last_order_at).toLocaleDateString() %></strong></span>
 </div>
 </div>
 </div>
 <% }) %>
 </div>
 <% } else { %>
 <div class="text-center py-4">
 <i class="ri-film-line icon-3x mb-3 text-light"></i>
 <p class="text-muted mb-0">Hələ sahib olduğunuz məhsul görünmür.</p>
 </div>
 <% } %>
 </div>
 </div>

 <div class="profile-section-card">
 <div class="card-header-premium">
 <i class="ri-history-line"></i>
 <h3>Sifariş Tarixçəsi</h3>
 </div>

 <div class="p-0">
 <% if (orders.length> 0) { %>
 <div class="order-list-wrap p-3 p-md-4">
 <% orders.forEach(order=> { %>
 <% const savedReview = (reviewsByOrderId && reviewsByOrderId[String(order.id)]) ? reviewsByOrderId[String(order.id)] : null; %>
 <% const orderImg = (orderProductImages && orderProductImages[String(order.id)]) ? orderProductImages[String(order.id)] : '/images/default-product.png'; %>
 <div class="order-row-card">
 <div class="order-row-main">
 <div class="order-row-photo">
 <img src="<%= orderImg %>" alt="<%= order.product_name %>" onerror="this.onerror=null;this.src='/images/default-product.png';">
 </div>
 <div class="order-row-body">
 <div class="order-row-head">
 <h4><%= order.product_name %></h4>
 <span class="status-badge-premium <%= order.status %>">
 <i class="<%= order.status === 'completed' ? 'ri-checkbox-circle-line' : (order.status === 'pending' ? 'ri-time-line' : 'ri-close-circle-line') %> mr-1"></i>
 <%= order.status==='pending' ? 'Gözləyir' : (order.status==='completed' ? 'Tamamlandı' : 'Ləğv edildi' ) %>
 </span>
 </div>
 <div class="order-row-meta">
 <span>#<%= order.id %></span>
 <span><%= new Date(order.created_at).toLocaleDateString() %></span>
 <strong><%= Number(order.amount).toFixed(2) %> AZN</strong>
 </div>
 </div>
 </div>
 <% if (String(order.status || '').toLowerCase() === 'completed') { %>
 <form action="/profile/orders/<%= order.id %>/review" method="POST" class="order-review-form">
 <div class="order-review-top">
 <span class="order-review-title"><%= savedReview ? 'Puanınızı yenilə' : 'Bu alışa puan ver' %></span>
 <div class="star-rating-group">
 <% for (let s = 5; s >= 1; s--) { %>
 <% const starId = `rating-${order.id}-${s}`; %>
 <input id="<%= starId %>" type="radio" name="rating" value="<%= s %>" <%= (savedReview && Number(savedReview.rating) === s) ? 'checked' : (!savedReview && s === 5 ? 'checked' : '') %>>
 <label for="<%= starId %>" title="<%= s %> ulduz">
 <i class="ri-star-fill"></i>
 </label>
 <% } %>
 </div>
 </div>
 <textarea name="comment" class="order-review-text" rows="2" maxlength="600" placeholder="Məhsul haqqında qısa, real rəy yazın..." required><%= savedReview ? savedReview.comment : '' %></textarea>
 <button type="submit" class="btn btn-outline btn-sm"><i class="ri-chat-3-line"></i> <%= savedReview ? 'Yenilə' : 'Rəy göndər' %></button>
 </form>
 <% } else { %>
 <div class="order-review-muted">
 <i class="ri-lock-line"></i> Yalnız tamamlanan sifarişlər üçün puanlama açılır.
 </div>
 <% } %>
 </div>
 <% }) %>
 </div>
 </div>
 <% } else { %>
 <div class="text-center py-5">
 <i class="ri-receipt-line icon-3x mb-3 text-light"></i>
 <p class="text-muted">Hələ heç bir sifarişiniz yoxdur.</p>
 </div>
 <% } %>
 </div>
 </div>
 </div>

