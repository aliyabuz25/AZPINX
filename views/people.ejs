<%- include('partials/header') %>

<div class="product-page-container">
  <div class="section-header mb-3" style="display:flex;justify-content:space-between;align-items:center;gap:12px;">
    <h3 class="mb-0">İcma Profilləri</h3>
    <form method="GET" action="/people" style="max-width:320px;width:100%;">
      <input type="text" name="q" value="<%= searchQuery || '' %>" class="form-control" placeholder="Profil axtar...">
    </form>
  </div>

  <div class="people-grid">
    <% (users || []).forEach(function(u){ %>
      <a href="/u/<%= u.id %>" class="people-card">
        <div class="people-avatar">
          <% if (u.avatar_path) { %>
            <img src="<%= u.avatar_path %>" alt="<%= u.full_name %>">
          <% } else { %>
            <span><%= String(u.full_name || 'U').charAt(0).toUpperCase() %></span>
          <% } %>
        </div>
        <div class="people-info">
          <h4><%= u.full_name %></h4>
          <div class="people-rank" style="color:<%= (u.rank_meta && u.rank_meta.color) || '#64748b' %>">
            <i class="<%= (u.rank_meta && u.rank_meta.icon) || 'ri-user-star-line' %>"></i>
            <span><%= (u.rank_meta && u.rank_meta.label) || 'Üzv' %></span>
          </div>
          <p><%= u.public_bio || 'Bu istifadəçi hələ bio əlavə etməyib.' %></p>
        </div>
      </a>
    <% }) %>
  </div>

  <% if (!users || !users.length) { %>
    <div class="text-center py-5 text-muted">Public profil tapılmadı.</div>
  <% } %>
</div>

<style>
.people-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
  gap: 16px;
}
.people-card {
  background: #fff;
  border: 1px solid #e2e8f0;
  border-radius: 14px;
  padding: 14px;
  display: flex;
  gap: 12px;
  box-shadow: 0 6px 18px rgba(15, 23, 42, 0.05);
}
.people-card:hover {
  transform: translateY(-2px);
  box-shadow: 0 14px 28px rgba(15, 23, 42, 0.1);
}
.people-avatar {
  width: 56px;
  height: 56px;
  flex: 0 0 56px;
  border-radius: 50%;
  background: #e2e8f0;
  overflow: hidden;
  display: grid;
  place-items: center;
  font-weight: 800;
  color: #334155;
}
.people-avatar img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.people-info h4 {
  margin: 0 0 4px;
  font-size: 16px;
}
.people-rank {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  font-size: 12px;
  font-weight: 700;
  margin-bottom: 6px;
}
.people-info p {
  margin: 0;
  color: #64748b;
  font-size: 13px;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
</style>

<%- include('partials/footer') %>
