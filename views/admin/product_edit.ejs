<%- include('header') %>

    <div class="row">
        <div class="col-md-12">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Məhsul Təfərrüatları</h3>
                </div>
                <form action="/admin/products/update" method="POST" enctype="multipart/form-data">
                    <input type="hidden" name="product_id" value="<%= product.db_id || '' %>">
                    <input type="hidden" name="api_id" value="<%= product.api_id || '' %>">

                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Məhsul Adı</label>
                                    <input type="text" name="name" class="form-control" value="<%= product.name %>"
                                        required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Kateqoriya</label>
                                    <input type="text" name="category" class="form-control"
                                        value="<%= product.category %>" required>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Qiymət (AZN)</label>
                                    <input type="number" step="0.01" name="price" class="form-control"
                                        value="<%= product.price %>" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Mevcut Şəkil</label>
                                    <div class="mb-2">
                                        <img src="<%= product.image %>" class="img-thumbnail" style="height: 100px;">
                                    </div>
                                    <label>Yeni Şəkil Yüklə</label>
                                    <div class="input-group">
                                        <div class="custom-file">
                                            <input type="file" name="image" class="custom-file-input" id="productImage">
                                            <label class="custom-file-label" for="productImage">Fayl seçin</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Açıqlama</label>
                            <textarea name="description" class="form-control"
                                rows="5"><%= product.description %></textarea>
                        </div>
                    </div>

                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Yadda Saxla</button>
                        <a href="/admin/products" class="btn btn-default">Geri</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        document.getElementById('productImage').onchange = function () {
            var fileName = this.value.split('\\').pop();
            this.nextElementSibling.classList.add("selected");
            this.nextElementSibling.innerHTML = fileName;
        };
    </script>

    <%- include('footer') %>