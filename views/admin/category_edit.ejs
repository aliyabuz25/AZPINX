<%- include('header') %>

 <!-- AdminLTE Content Wrapper -->
 <div class="content-wrapper">
 <div class="content-header">
 <div class="container-fluid">
 <div class="row mb-2">
 <div class="col-sm-6">
 <h1 class="m-0">Kateqoriya Redaktə</h1>
 </div>
 </div>
 </div>
 </div>

 <section class="content">
 <div class="container-fluid">
 <div class="card card-primary">
 <div class="card-header">
 <h3 class="card-title">
 <%= category.name %>
 </h3>
 </div>
 <!-- form start -->
 <form action="/admin/categories/update" method="POST" enctype="multipart/form-data">
 <input type="hidden" name="category_id" value="<%= category.id %>">
 <div class="card-body">
 <div class="form-group">
 <label>Kateqoriya Adı</label>
 <input type="text" class="form-control" name="name" value="<%= category.name %>"
 required>
 </div>
 <div class="form-group">
 <label>İkon (FontAwesome)</label>
 <input type="text" class="form-control" name="icon" value="<%= category.icon %>">
 <small class="form-text text-muted">Məsələn: ri-gamepad-line, ri-fire-line</small>
 </div>
 <div class="form-group">
 <label>Təsvir</label>
 <textarea class="form-control" name="description"
 rows="3"><%= category.description %></textarea>
 </div>
 <div class="form-group">
 <label>Şəkil Yüklə</label>
 <div class="input-group">
 <div class="custom-file">
 <input type="file" class="custom-file-input" name="image" accept="image/*">
 <label class="custom-file-label">Fayl seçin</label>
 </div>
 </div>
 <% if (category.image_path) { %>
 <div class="mt-2">
 <p>Cari Şəkil:</p>
 <img src="<%= category.image_path %>" alt="Category Image"
 style="height: 100px; border-radius: 5px;">
 </div>
 <% } %>
 </div>
 </div>

 <div class="card-footer">
 <button type="submit" class="btn btn-primary">Yadda saxla</button>
 <a href="/admin/categories" class="btn btn-default float-right">Ləğv et</a>
 </div>
 </form>
 </div>
 </div>
 </section>
 </div>

 <%- include('footer') %>