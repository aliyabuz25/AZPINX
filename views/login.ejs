<%- include('partials/header') %>
 <div class="auth-page">
 <div class="auth-card">
 <div class="auth-header">
 <h2>Daxil ol</h2>
 <p>Hesabınıza giriş edin</p>
 </div>

 <% if (locals.error) { %>
 <div class="alert alert-danger" style="margin-bottom: 20px;">
 <%= error %>
 </div>
 <% } %>

 <form action="/login" method="POST">
 <div class="form-group">
 <label>E-poçt</label>
 <input type="email" name="email" required placeholder="nümunə@mail.com">
 </div>
 <div class="form-group">
 <label>Şifrə</label>
 <input type="password" name="password" required placeholder="••••••••">
 </div>
 <div style="margin-top: -6px; margin-bottom: 12px; text-align: right;">
 <a href="/forgot-password" style="font-size: 13px; color: var(--text-muted);">Şifrəni unutdum</a>
 </div>
 <button type="submit" class="btn btn-primary" style="width: 100%; margin-top: 10px;">Giriş
 et</button>
 </form>
 <div style="margin-top: 25px; border-top: 1px solid var(--border-color); padding-top: 20px;">
 <p style="text-align: center; color: var(--text-muted); font-size: 14px;">Hesabınız yoxdur? <a
 href="/register" style="color: var(--primary-color); font-weight: 700;">Qeydiyyatdan
 keçin</a></p>
 </div>
 </div>
 </div>
 <%- include('partials/footer') %>
