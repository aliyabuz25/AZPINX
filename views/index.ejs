    <main>
 <!-- Hero Section -->
 <section class="hero">

 <div class="slider-container swiper hero-swiper">
 <div class="swiper-wrapper">
 <% sliders.forEach(function(slider) { %>
 <div class="slider-item swiper-slide"
 data-link="<%= slider.link || '' %>"
 data-has-link="<%= !!(slider.link && slider.link !== '#') %>"
 style="background-image: url('<%= slider.image %>');">
 <% if (slider.title) { %>
 <div class="slider-content">
 <h2>
 <%= slider.title %>
 </h2>
 </div>
 <% } %>
 </div>
 <% }) %>
 </div>
 </div>
 </section>

 <div class="side-rail-ads" aria-hidden="true">
 <div class="side-rail-ad side-rail-ad-left">
 <iframe name="ad_left_rail" src="https://servers6.adriver.ru/images/0014048/0014048449/0/left.html?html_params=xpid%3DDJ5lz74nTmXMy0fax0MOMqNPTudwvNid5BOpBcJQiU9wDVSJuIzwWdVcAa0XD_Opq4j76stW2souU_TC1sYBwtabsnAXBHPw_%26target%3D_blank%26bid%3D14048449%26sid%3D220545%26width%3D100%2525%26height%3D100%2525%26rnd%3D9571787%26pz%3D0%26ad%3D832535%26bt%3D52%26bn%3D3%26ar_sliceid%3D5121785%26ntype%3D0%26nid%3D0%26ar_geoid%3D166%26url%3D%252F%252Fad.adriver.ru%252Fcgi-bin%252Fclick.cgi%253Fsid%253D220545%2526ad%253D832535%2526bid%253D14048449%2526bt%253D52%2526bn%253D3%2526pz%253D0%2526xpid%253DDJ5lz74nTmXMy0fax0MOMqNPTudwvNid5BOpBcJQiU9wDVSJuIzwWdVcAa0XD_Opq4j76stW2souU_TC1sYBwtabsnAXBHPw_%2526ref%253Dhttps%253A%25252f%25252ftap.az%25252f%2526erid%253D%2526custom%253D1%25253DElektronika%25253B2%25253DTelefonlar%25253B3%25253D25%25253B4%25253DAksesuarlar%25253B5%25253DBeli%25253B6%25253D%25253B7%25253DBaki%2526rleurl%253D%26CompPath%3Dhttps%253A%252F%252Fservers6.adriver.ru%252Fimages%252F0014048%252F0014048449%252F0%252F%26ar_pass%3D%26advid%3D"
 frameborder="0" width="100%" height="100%" marginwidth="0" marginheight="0" scrolling="no"
 loading="lazy"></iframe>
 </div>
 <div class="side-rail-main">

 <!-- Quick Icons Row -->
 <section class="quick-icons-section">
 <div class="quick-icons-heading">
 <h3>Kateqoriyalar</h3>
 <p>Ən populyar kateqoriyalara bir kliklə keçid edin.</p>
 </div>
 <div class="quick-icons-row">
 <% quickActions.forEach(function(action) { %>
 <a href="/?category=<%= encodeURIComponent(action.name) %>" class="quick-icon-card">
 <div class="img-box d-flex align-items-center justify-content-center">
 <% if (action.image_path) { %>
 <img src="<%= action.image_path %>" alt="<%= action.name %>"
 onerror="this.src='https://via.placeholder.com/70?text=GAME'">
 <% } else { %>
 <i class="<%= action.icon %> icon-2x" style="color: var(--primary-color);"></i>
 <% } %>
 </div>
 <span>
 <%= action.name %>
 </span>
 </a>
 <% }) %>
 </div>
 </section>

 <!-- Dynamic Sections or Featured Products -->
 <% if (searchQuery || selectedCategory) { %>
 <!-- Search/Category Result View (Standard Grid) -->
 <section class="section-container">
 <div class="section-header">
 <h3>
 <%= selectedCategory ? selectedCategory : (searchQuery ? 'Axtarış Nəticələri' : 'Məhsullar' ) %>
 </h3>
 <a href="/" class="view-all"><i class="ri-close-line"></i> Filtrləri təmizlə</a>
 </div>

 <% if (featuredProducts.length===0) { %>
 <div class="text-center py-5">
 <i class="ri-inbox-unarchive-line icon-3x text-muted mb-3"></i>
 <p class="text-muted">Məhsul tapılmadı.</p>
 </div>
 <% } else { %>
 <div class="product-grid">
 <% featuredProducts.forEach(function(product) { %>
 <%- include('partials/product_card', { product: product }) %>
 <% }) %>
 </div>

 <!-- Pagination Controls -->
 <% if (totalPages> 1) { %>
 <div class="pagination-container">
 <ul class="pagination">
 <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
 <a class="page-link"
 href="/?page=<%= currentPage - 1 %><%= selectedCategory ? '&category=' + encodeURIComponent(selectedCategory) : '' %><%= searchQuery ? '&search=' + encodeURIComponent(searchQuery) : '' %>">
 <i class="ri-arrow-left-s-line"></i>
 </a>
 </li>
 <% for(let i=1; i <=totalPages; i++) { %>
 <li class="page-item <%= currentPage === i ? 'active' : '' %>">
 <a class="page-link"
 href="/?page=<%= i %><%= selectedCategory ? '&category=' + encodeURIComponent(selectedCategory) : '' %><%= searchQuery ? '&search=' + encodeURIComponent(searchQuery) : '' %>">
 <%= i %>
 </a>
 </li>
 <% } %>
 <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
 <a class="page-link"
 href="/?page=<%= currentPage + 1 %><%= selectedCategory ? '&category=' + encodeURIComponent(selectedCategory) : '' %><%= searchQuery ? '&search=' + encodeURIComponent(searchQuery) : '' %>">
 <i class="ri-arrow-right-s-line"></i>
 </a>
 </li>
 </ul>
 </div>
 <% } %>
 <% } %>
 </section>

 <% } else if (locals.homeAutoSections && homeAutoSections.length> 0) { %>
 <!-- Auto Home Sections -->
 <% homeAutoSections.forEach(section=> { %>
 <% if (section.products && section.products.length> 0) { %>
 <section class="section-container">
 <div class="section-header">
 <h3>
 <%= section.title %>
 </h3>
 <% if (section.link) { %>
 <a href="<%= section.link %>" class="view-all">Hamısına bax <i class="ri-arrow-right-line"></i></a>
 <% } %>
 </div>
 <div class="product-grid">
 <% section.products.forEach(function(product) { %>
 <%- include('partials/product_card', { product: product }) %>
 <% }) %>
 </div>
 </section>
 <% } %>
 <% }) %>

 <% } else if (locals.homeSections && homeSections.length> 0) { %>
 <!-- Dynamic Home Sections -->
 <% homeSections.forEach(section=> { %>
 <% if (section.products && section.products.length> 0) { %>
 <section class="section-container">
 <div class="section-header">
 <h3>
 <%= section.title %>
 </h3>
 <% if (section.category_id && section.category_name) { %>
 <a href="/all-products?category=<%= encodeURIComponent(section.category_name) %>"
 class="view-all">Hamısına bax <i class="ri-arrow-right-line"></i></a>
 <% } %>
 </div>
 <div class="product-grid">
 <% section.products.forEach(function(product) { %>
 <%- include('partials/product_card', { product: product }) %>
 <% }) %>
 </div>
 </section>
 <% } %>
 <% }) %>

 <% } else { %>
 <!-- Fallback: Default Featured Products -->
 <section class="section-container">
 <div class="section-header">
 <h3>Önə Çıxanlar</h3>
 <a href="/all-products" class="view-all">Hamısına bax <i
 class="ri-arrow-right-line"></i></a>
 </div>
 <div class="product-grid">
 <% featuredProducts.forEach(function(product) { %>
 <%- include('partials/product_card', { product: product }) %>
 <% }) %>
 </div>
 <!-- Pagination Controls -->
 <% if (totalPages> 1) { %>
 <div class="pagination-container">
 <ul class="pagination">
 <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
 <a class="page-link" href="/?page=<%= currentPage - 1 %>">
 <i class="ri-arrow-left-s-line"></i>
 </a>
 </li>
 <% for(let i=1; i <=totalPages; i++) { %>
 <li class="page-item <%= currentPage === i ? 'active' : '' %>">
 <a class="page-link" href="/?page=<%= i %>">
 <%= i %>
 </a>
 </li>
 <% } %>
 <li
 class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
 <a class="page-link"
 href="/?page=<%= currentPage + 1 %>">
 <i class="ri-arrow-right-s-line"></i>
 </a>
 </li>
 </ul>
 </div>
 <% } %>
 </section>
 <% } %>

 <!-- Promo Banner -->
 <section class="section-container" style="margin-top: 40px;">
 <div
 style="background: var(--accent-color); padding: 40px; border-radius: var(--radius-lg); color: white; display: flex; justify-content: space-between; align-items: center; background-image: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);">
 <div>
 <h2 style="font-size: 32px; margin-bottom: 10px; font-weight: 800;">
 Endirimləri qaçırma!</h2>
 <p style="opacity: 0.9; font-size: 16px;">Bütün oyunlar üçün ən ucuz
 rəqəmsal kodlar yalnız bizdə.
 </p>
 </div>
 <a href="/register" class="btn btn-primary"
 style="padding: 15px 40px; border-radius: 12px; font-size: 16px; background: white; color: var(--primary-color);">Qeydiyyatdan
 keç</a>
 </div>
 </section>

 <!-- Popular Games Section -->
 <section class="section-container">
 <div class="section-header">
 <h3>Populyar Oyunlar</h3>
 <a href="/all-products" class="view-all">Hamısına bax <i
 class="ri-arrow-right-line"></i></a>
 </div>
 <div class="product-grid">
 <% featuredProducts.slice(0, 4).forEach(function(product) { %>
 <%- include('partials/product_card', { product: product }) %>
 <% }) %>
 </div>
 </section>

 <!-- Stats -->
 <section class="stats-section">
 <div class="stats-grid">
 <div class="stat-item">
 <div class="stat-icon"><i class="ri-group-line"></i></div>
 <h4>
 <%= typeof stats !=='undefined' ? stats.users : '50K' %>+
 </h4>
 <p>Müştəri</p>
 </div>
 <div class="stat-item">
 <div class="stat-icon"><i class="ri-gamepad-line"></i></div>
 <h4>
 <%= typeof stats !=='undefined' ? stats.products : '1000' %>+
 </h4>
 <p>Məhsul</p>
 </div>
 <div class="stat-item">
 <div class="stat-icon"><i class="ri-flashlight-line"></i></div>
 <h4>
 <%= typeof stats !=='undefined' ? stats.deliveryTime
 : '3 Saniyə' %>
 </h4>
 <p>Sürətli Çatdırılma</p>
 </div>
 <div class="stat-item">
 <div class="stat-icon"><i class="ri-star-line"></i></div>
 <h4>
 <%= typeof stats !=='undefined' ? stats.rating : '4.9/5' %>
 </h4>
 <p>Reytinq</p>
 </div>
 </div>
 </section>
 </div>
