<script>
 (function () {
 const STORAGE_KEY = 'azpin_lang';
 const langBtn = document.getElementById('langCurrentBtn');
 const langMenu = document.getElementById('langMenu');
 const langCode = document.getElementById('langCurrentCode');
 const langOptions = document.querySelectorAll('.lang-option');

 function setLanguageCode(lang) {
 if (langCode) langCode.textContent = (lang || 'az').toUpperCase();
 }

 function applyLanguage(lang) {
 const combo = document.querySelector('.goog-te-combo');
 if (combo) {
 combo.value = lang;
 combo.dispatchEvent(new Event('change'));
 } else {
 document.cookie = `googtrans=/az/${lang};path=/`;
 document.cookie = `googtrans=/az/${lang};domain=${location.hostname};path=/`;
 location.reload();
 }
 localStorage.setItem(STORAGE_KEY, lang);
 setLanguageCode(lang);
 }

 langBtn && langBtn.addEventListener('click', () => {
 langMenu.classList.toggle('open');
 });

 document.addEventListener('click', (e) => {
 if (!e.target.closest('#languageSwitcher')) langMenu.classList.remove('open');
 });

 langOptions.forEach((btn) => {
 btn.addEventListener('click', () => {
 const selected = btn.getAttribute('data-lang') || 'az';
 applyLanguage(selected);
 langMenu.classList.remove('open');
 });
 });

 window.googleTranslateElementInit = function () {
 new google.translate.TranslateElement({
 pageLanguage: 'az',
 includedLanguages: 'az,tr,ru',
 autoDisplay: false
 }, 'google_translate_element');

 const saved = localStorage.getItem(STORAGE_KEY) || 'az';
 setLanguageCode(saved);
 if (saved !== 'az') {
 setTimeout(() => applyLanguage(saved), 400);
 }
 };

 setLanguageCode(localStorage.getItem(STORAGE_KEY) || 'az');
 })();
</script>
